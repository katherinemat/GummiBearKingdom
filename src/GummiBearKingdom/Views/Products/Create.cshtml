@model GummiBearKingdom.Models.Product
@{
    ViewData["Title"] = "Gummi Bear Kingdom - New Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<hr />
<h4>Add a new Product</h4>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.ProductName)
        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProductCost)
        @Html.TextBoxFor(model => model.ProductCost, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProductCountry)
        @Html.TextBoxFor(model => model.ProductCountry, new { @class = "form-control" })
    </div>

    <input type="submit" value="Add new Product" class="btn btn-primary" />
}
<p>@Html.ActionLink("Back to list", "Index")</p>